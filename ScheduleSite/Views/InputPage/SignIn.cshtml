@model ScheduleSite.Models.InputPage.SignInViewModel

<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5 mt-3">
        <div class="col-lg-7 text-center text-lg-start">
            <h1 class="display-4 fw-bold lh-1 mb-3">Sign-up form</h1>
            <p class="col-lg-10 fs-4">Hi, I just wanted to take a moment of your time to thank you for consistently choosing us despite the competition. We highly appreciate your loyalty and the fact that you trust us with your needs. If there is anything you would like us to do to improve or express gratitude, please feel free to contact me directly.</p>
        </div>
        <div class="col-md-10 mx-auto col-lg-5">
            <form asp-controller="InputPage" asp-action="SignIn" class="p-4 p-md-5 border rounded-3 bg-light">

                <div class="form-floating mb-3">
                    <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                    <label for="floatingInput">Email address</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div>

                <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
                <hr class="my-4">
                <small class="text-muted">By clicking Sign up, you agree to the terms of use.</small>
            </form>
        </div>
    </div>
</div>

@model ScheduleSite.Models.InputPage.SignUpViewModel

<div class="vh-100">
    <div class="d-flex align-items-center h-100">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-8">
                    <h3 class="mb-5 text-center">Sign Up</h3>

                    <form asp-controller="InputPage" asp-action="SignUp" novalidate="">
                        <div class="row g-3">

                            <div class="col-sm-6 mb-2">
                                <label asp-for="UserName" for="lastName" class="form-label">Your initials</label>
                                <input asp-for="UserName" type="text" class="form-control" placeholder="Juiko Mathew" required="">
                                <span class="position-absolute" asp-validation-for="UserName"></span>
                            </div>

                            <div class="col-sm-6 mb-2">
                                <label asp-for="Email" class="form-label">Email</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fa-solid fa-at"></i></span>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="you@example.com" required="">
                                </div>
                                <span class="position-absolute" asp-validation-for="Email"></span>
                            </div>

                            <div class="col-sm-6 mb-2">
                                <label asp-for="PhoneNumber" class="form-label">Phone number</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fa-solid fa-phone"></i></span>
                                    <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="+375(29)393-17-60" required="">
                                </div>
                                <span class="position-absolute" asp-validation-for="PhoneNumber"></span>
                            </div>

                            <div class="col-sm-6 mb-2">
                                <label asp-for="DateOfBirth" class="form-label">Date of birth</label>
                                <input asp-for="DateOfBirth" type="date" class="form-control" required="">
                                <span class="position-absolute" asp-validation-for="DateOfBirth"></span>
                            </div>

                            <div class="col-sm-6 mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" required="">
                                <span class="position-absolute" asp-validation-for="Password"></span>
                            </div>

                            <div class="col-sm-6 mb-3">
                                <label asp-for="RepeatPassword" class="form-label">Repeat password</label>
                                <input asp-for="RepeatPassword" type="password" class="form-control" required="">
                                <span class="position-absolute" asp-validation-for="RepeatPassword"></span>
                            </div>

                            <div class="col-sm-3"></div>

                            <div class="col-sm-6 mb-3">
                                <label class="form-label" asp-for="Role">Role</label>
                                <select class="form-select" asp-for="Role">
                                    <option selected>Open this select menu</option>
                                    <option value="1">Student</option>
                                    <option value="2">Teacher</option>
                                </select>
                                <span class="position-absolute" asp-validation-for="Role"></span>
                            </div>

                            <div class="col-sm-3"></div>

                        </div>

                        <div class="row mt-3">
                            <div class="col-4"></div>
                            <button class="btn btn-primary btn-lg col-4" type="submit">Sign Up</button>
                            <div class="col-4"></div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
